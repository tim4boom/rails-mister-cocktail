
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://res.cloudinary.com/tim4boom/image/upload/v1582376585/Froffy-banner_vx5ylp.png')">

  <div class="d_flex">
    <div class="general-container">
      <div class="banner-content">
        <div class="dict-froffy">
          <h1>Froffie</h1>
          <p>| ˈfrɒffi |</p>
          <p>noun INFORMAL, DEROGATORY</p>
          <p>plural noun: froffies</p>
          <p><em>Oi coppa, keen to hit the froffies this arvy?<br>
          Sure am mate.</em></p>
        </div>

        <%= simple_form_for :search, url: root_path, method: :get do |f| %>
          <div class="search-form-control form-group">
            <input class="form-control string required" type="text" name="search[query]" id="search_query" />
            <button name="button" type="submit" class="btn btn-success">
              <i class="fas fa-search"></i> Search
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="d-flex">
  <div class="general-container">
    <div class="cards">
      <% @cocktails.each do |cocktail| %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cocktail.photo %>')">
          <%= cocktail.name %>
          <%= link_to "", cocktail_path(cocktail), class: "fas fa-info-circle" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-3">
      <h4>Add a cocktail:</h4>
      <%= simple_form_for (@cocktail) do |f| %>
        <%= f.input :name, placeholder: "Denzel Frothington" %>
        <%= f.input :photo, placeholder: "Your-froffy-image.jpg" %>
        <%= f.submit "Add", class: "btn btn-success" %>
      <% end %>
  </div>
</div>
