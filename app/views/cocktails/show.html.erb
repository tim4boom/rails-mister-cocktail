<h1><%= @cocktail.name %></h1>

<% if @cocktail.photo.present? %>
  <%= image_tag @cocktail.photo, width: 400, height: 300, crop: :fill %>
<% else %>
  <%= image_tag 'default_missing_image.png', width: 400, height: 300, crop: :fill %>
<% end %>

<ul style="list-style: none">
  <% @doses.each do |dose| %>
  <li>
    <%= dose.ingredient.name %>
    - <%= dose.description %>
    <%= link_to "Delete dose", dose_path(dose),method: :delete, class: "btn-treehouse" %>
  </li>
  <% end %>
</ul>

<%= link_to "Add dose", new_cocktail_dose_path(@cocktail), class: "btn-treehouse" %>
<%= link_to "Back", root_path, class: "btn-treehouse" %>
