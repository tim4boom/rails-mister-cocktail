<div class="general-container">
  <h1><%= @cocktail.name %></h1>

  <div class="frofftail-img-grid">
    <% if @cocktail.thumbnail.attached? %>
      <%= cl_image_tag @cocktail.thumbnail.key, class: "frofftail-img" %>
    <% else %>
      <%= image_tag @cocktail.photo, class: "frofftail-img" %>
    <% end %>
  </div>

  <div class="instruction-header">
    <h2>How to make it</h2>
  </div>

  <%= link_to "Back", root_path, class: "btn-grey" %>
  <%= link_to "Add dose", new_cocktail_dose_path(@cocktail), class: "btn-pink" %>

  <div class="doses-table">
    <table class="table">
      <tbody>
        <% @doses.each do |dose| %>
          <tr>
            <td class="td-left"><strong><%= dose.ingredient.name %></strong></td>
            <td class="td-middle"><em><%= dose.description %></em></td>
            <td class="td-right"><%= link_to "", dose_path(dose), method: :delete, class: "fas fa-trash-alt" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>

